<script>
var arr = []; arr.push({url:'/ssi/header_tizer/_7698827.shtml', timer:100}); arr.push({url:'/ssi/header_tizer/_7698821.shtml', timer:100}); arr.push({url:'/ssi/header_tizer/_7698815.shtml', timer:100}); var r = Math.random();
var ind;
var url;
if (r < 0.333333333333333)
ind = 0;
else if (r < 0.666666666666667)
ind = 1;
else if (r < 1)
ind = 2;
url = arr[ind].url;
$( "#placeHeaderTizer" ).load( url ); setTimeout( nextHeaderTizer, arr[ind].timer*1000 );
function nextHeaderTizer () {
ind++;
if ( ind >= 3 )
ind = 0;
url = "";
url = arr[ind].url;
if (url){
$( "#placeHeaderTizer" ).load( url );
}
setTimeout( nextHeaderTizer, arr[ind].timer*1000 );
} </script>

