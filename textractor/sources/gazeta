$('.common_height').each(function(){
$this=$(this);
var maxh = 0; // ищем самую высокую заметку и подставляем ее высоту всем остальным
$this.find('article').each(function(){
var h = $(this).height();
if (h > maxh) maxh = h;
});
$this.find('article').each(function(){
$(this).height(maxh);
});
